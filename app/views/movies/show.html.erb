<body>
  <section>
    <%= @movie.title %>
    <%= @movie.creation_year %>
    <%= @movie.genre %>
  </section>

  <section>
    <% @movie.actors.sort_by_age.each do |actor| %>
    <%= actor.name %>
    <% end %>
  </section>

  <section>
    Average Actor Age: <%= @movie.actors.average_age.round(2) %>
  </section>

  <section>
    <%= form_tag "/movies/#{@movie.id}/actors", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :age %>
    <%= text_field_tag :age %>

    <%= submit_tag "Submit" %>
    <% end %>
  </section>
</body>
